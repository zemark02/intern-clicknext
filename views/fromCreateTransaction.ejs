<div class="d-flex flex-row flex-wrap border-bottom">
    <div>
      <button class="btn btn-success mt-4 mb-4 ms-5" style="width:200px;height:50px"  data-bs-toggle="modal" data-bs-target="#modalDeposit">Deposit</button>
    </div>
    <div>
      <button class="btn btn-danger mt-4 mb-4 ms-5 text-light" style="width:200px;height:50px" data-bs-toggle="modal" data-bs-target="#modalWithdraw">Withdraw</button>
    </div>
    <div>
      <button class="btn mt-4 mb-4 ms-5 text-light" style="width:200px;height:50px;background-color: #FFA200;" data-bs-toggle="modal" data-bs-target="#modalTransfer">Transfer</button>
    </div>
</div>

<div class="modal fade" id="modalDeposit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Deposit</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/deposit/<%=data.bank._id%>">
                    <div class="form-group mt-1">
                        <label for="amount">amount</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="200" min=1  required> 
                        <small class="my-0 text-danger">*Only integer.</small>
                    </div>
                    <button type="submit" hidden id="submit-deposit"></button>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-success" id="btn-deposit" >Deposit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalWithdraw">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Withdraw</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/withdraw/<%=data.bank._id%>">
                    <div class="form-group mt-1">
                        <label for="amount">amount</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="200" min=1 max = <%= data.bank.balance %> required>
                        <small class="my-0 text-danger">*Only integer.</small>
                    </div>
                    <button type="submit" hidden id="submit-withdraw"></button>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" id="btn-withdraw" >Withdraw</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalTransfer">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transfer</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/transfer/<%=data.bank._id%>">
                    <div class="form-group">
                        <label for="Bank Name">Bank Name</label>
                        <select id="BankName" name="bankName" class="form-control" required>
                            <option disabled selected value>Select a bank name</option>
                            <option value="Kasikorn Bank">Kasikorn Bank</option>
                            <option value="Siam Commercial Bank">Siam Commercial Bank</option>
                            <option value="Bangkok Bank">Bangkok Bank</option>
                            <option value="TMB Bank">TMB Bank</option>
                            <option value="Krungthai Bank">Krungthai Bank</option>
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <label for="Bank Account">Bank Account</label>
                        <input type="text" class="form-control" id="Bank Account" name="accountNumber" placeholder="1111111111" minlength="10" maxlength="10" required>
                        <small class="my-0 text-danger">*length 10 characters and numbers only.</small>
                    </div>

                    <div class="form-group mt-1">
                        <label for="amount">amount</label>
                        <input type="number" class="form-control" id="amount" name="amount" placeholder="200" min = 1 max = <%=data.bank.balance %> required >
                        <small class="my-0 text-danger">*Only integer.</small>
                    </div>
                    <button type="submit" hidden id="submit-transfer"></button>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-warning text-light" id="btn-transfer" >Trasnfer</button>
            </div>
        </div>
    </div>
</div>