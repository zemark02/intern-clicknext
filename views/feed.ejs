<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <title>Feed</title>
    <link rel="stylesheet" href="css/feed.css" />
    <script src="/js/feed.js"></script>
  </head>
  <body>
    <%- include('navbar.ejs') %>
    <div class="container my-5">
      <h2>BANK ACCOUNT</h2>
      <%- include('formCreateBankAcc.ejs') %>

      <% if( data.createSuccessfully != undefined ) { %>
        <% if(data.createSuccessfully =="true"){ %>
          <div class="alert alert-primary" role="alert">Bank account created successfully</div>
        <% }else{ %>
          <div class="alert alert-danger" role="alert">Failed to create bank account</div>
        <% } %>
      <%} %>
      <hr />

      <div class="d-flex flex-row flex-wrap">
        <% if(data.success){%>
          <% data.banks.forEach(bank=>{ %>
            <% let accNumber = [...bank.accountNumber].slice(0,3).join("") +  "-" + [...bank.accountNumber].slice(3,7).join("") +"-" +[...bank.accountNumber].slice(7,).join("") %>
            <% if(bank.bankName == "Kasikorn Bank"){ %>
              <a href="/Bank/<%=bank.id%>" class="detail-bank">
                <div class="div-bank my-2 bg-success">
                  <div class="container">
                    <div class="row">
                      <div class="col-4">
                        <div class="div-img my-4 ms-4">
                          <img src="img/kasikorn.png" alt="" class="img-fluid" />
                        </div>
                      </div>
                      <div class="col-8">
                        <h5 class="mb-2 mt-4 text-light">Kasikorn Bank</h5>
                        <h5 class="mb-2 text-light"><%= accNumber %></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            <% } %> 

            <% if(bank.bankName == "Siam Commercial Bank"){ %>
              <a href="/Bank/<%=bank.id%>" class="detail-bank">
                <div class="div-bank my-2" style="background-color: purple">
                  <div class="container">
                    <div class="row">
                      <div class="col-4">
                        <div class="div-img my-4 ms-4">
                          <img src="img/scb.png" alt="" class="img-fluid" />
                        </div>
                      </div>
                      <div class="col-8">
                        <h5 class="mb-2 mt-4 text-light">Siam commecial bank</h5>
                        <h5 class="mb-2 text-light"> <%= accNumber %></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            <% } %>

            <% if(bank.bankName == "TMB Bank"){ %>
              <a href="/Bank/<%=bank.id%>" class="detail-bank">
                <div class="div-bank my-2" style="background-color: #4682b4">
                  <div class="container">
                    <div class="row">
                      <div class="col-4">
                        <div class="div-img my-4 ms-4">
                          <img src="img/tmb.png" alt="" class="img-fluid" />
                        </div>
                      </div>
                      <div class="col-8">
                        <h5 class="mb-2 mt-4 text-light">TMB Bank</h5>
                        <h5 class="mb-2 text-light"><%= accNumber %></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            <% } %>

            <% if(bank.bankName == "Krungthai Bank"){ %>
              <a href="/Bank/<%=bank.id%>" class="detail-bank">
                <div class="div-bank my-2 bg-info">
                  <div class="container">
                    <div class="row">
                      <div class="col-4">
                        <div class="div-img my-4 ms-4">
                          <img src="img/krungthai.png" alt="" class="img-fluid" />
                        </div>
                      </div>
                      <div class="col-8">
                        <h5 class="mb-2 mt-4 text-light">Krungthai Bank</h5>
                        <h5 class="mb-2 text-light"><%= accNumber %></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            <% } %>

            <% if(bank.bankName == "Bangkok Bank"){ %>
              <a href="/Bank/<%=bank.id%>" class="detail-bank">
                <div class="div-bank my-2" style="background-color: blue">
                  <div class="container">
                    <div class="row">
                      <div class="col-4">
                        <div class="div-img my-4 ms-4">
                          <img src="img/bangkok.png" alt="" class="img-fluid" />
                        </div>
                      </div>
                      <div class="col-8">
                        <h5 class="mb-2 mt-4 text-light">Bangkok Bank</h5>
                        <h5 class="mb-2 text-light"><%= accNumber %></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            <% } %>

          <% }) %>
        <% } %>
      </div>
    </div>
  </body>
</html>
